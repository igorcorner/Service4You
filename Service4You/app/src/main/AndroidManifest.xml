<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.s4y.service4you">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/img_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SplashScreens.SplashScreenFirstTime">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashScreens.SplashScreen">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Authentication.LoginActivity" />
        <activity android:name=".Authentication.Register.RegisterLoginInfoActivity" />
        <activity android:name=".Authentication.Register.RegisterPersonalInfoActivity" />
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.EditProfileAvtivity" />
        <activity android:name=".Activities.HistoryActivity" />
        <activity android:name=".Activities.DiscountDetailsActivity"></activity>
    </application>

</manifest>